use reservation_system;

explain;
SELECT * FROM product t1
INNER JOIN product_image t2 ON t1.ID = t2.product_id
INNER JOIN FILE t3 ON t2.file_id = t3.ID
LEFT OUTER JOIN display_info t5 ON t1.ID = t5.product_id
WHERE sales_flag=0 AND TYPE = 1 LIMIT 0, 10;


select *
from product t1 
LEFT OUTER JOIN product_detail t4 ON t1.ID = t4.product_id
LEFT OUTER JOIN display_info t5 ON t1.ID = t5.product_id
WHERE t1.id= 2;

SELECT *
FROM product_image t1 
INNER JOIN FILE t2 ON t1.file_id = t2.ID
WHERE t1.product_id = 2 AND TYPE < 3;


select * , t1.id id, t4.id product_detail_id, t5.id display_info_id
from product t1 
LEFT OUTER JOIN product_detail t4 ON t1.ID = t4.product_id
LEFT OUTER JOIN display_info t5 ON t1.ID = t5.product_id
WHERE t1.id= 2;


SELECT * ,product.id id, product_detail.id product_detail_id, display_info.id display_info_id
FROM product
LEFT OUTER JOIN product_detail ON product.id = product_detail.product_id
LEFT OUTER JOIN display_info ON product.id = display_info.product_id
WHERE product.id= 1;